# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/navodaya_connect

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Server Configuration
NODE_ENV=production
PORT=5000

# SMS/WhatsApp Configuration (Choose one provider)
SMS_PROVIDER=mock
# Options: 'twilio', 'msg91', 'mock'

# Twilio Configuration (if using SMS_PROVIDER=twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# MSG91 Configuration (if using SMS_PROVIDER=msg91)
MSG91_API_KEY=your_msg91_api_key
MSG91_SENDER_ID=your_sender_id
MSG91_TEMPLATE_ID=your_template_id
MSG91_WHATSAPP_TEMPLATE_ID=your_whatsapp_template_id

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Facebook OAuth (Optional)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Apple OAuth (Optional)
APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY_PATH=path/to/apple/private/key.p8